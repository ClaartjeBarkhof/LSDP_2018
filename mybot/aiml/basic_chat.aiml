<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
    <category>
        <pattern>HELLO</pattern>
        <template>
            Well, hello!
        </template>
    </category>

    <category>
        <pattern>WHAT ARE YOU</pattern>
        <template>
            I'm a bot, silly!
        </template>
    </category>

    <category>
        <pattern><set name="cars" /></pattern>
        <template>WORKED!</template>
    </category>

    <category>
        <pattern>I LIKE THE <regex template="colour-spelling" /> RED</pattern>
        <template>REGEX works</template>
    </category>

    <category>
        <pattern>* NEXT TRAIN FROM <set name='stations'>*</set></pattern>
        <template>
            From <star index='2' /><map name="gettrain"><star index='2' /></map>
            <think><set name='currenctloc'><star /></set></think>
        </template>
    </category>

    <category>
        <pattern>NEXT TRAIN FROM <set name='stations'>*</set></pattern>
        <template>
            From <star /><map name="gettrain"><star /></map>
            <think><set name='currentloc'><star /></set></think>
        </template>
    </category>

    <category>
        <pattern>* NEXT TRAIN FROM *</pattern>
        <template>
            <star index='2' /> is not a known station.
            <think><set name='currentloc'><star index='2'/></set></think>
        </template>
    </category>

    <category>
        <pattern>NEXT TRAIN FROM * </pattern>
        <template><star /> is not a known station.</template>
    </category>


    <category>
        <pattern>WHAT TRAINS ARE LEAVING AT *</pattern>

        <template>
            <condition>
                <li name='currentloc' value='unknown'>Where do you want to depart from?</li>
                <li name='destination' value='unknown'>Where do you want to go to?</li>
                <li>You want to go to from <get name='currentloc' /> to <get name='destination' /></li>
            </condition>
        </template>
    </category>

    <category>
        <pattern><set name='stations'>*</set></pattern>
        <that>WHERE DO YOU WANT TO DEPART FROM</that>
        <template>
            <think><set name='currentloc'><star /></set></think>
            <condition>
                <li name='destination' value='unknown'>Where do you want to go to?</li>
                <li>You want to go to from <get name='currentloc' /> to <get name='destination' /></li>
            </condition>
        </template>
    </category>

    <category>
        <pattern><set name='stations'>*</set></pattern>
        <that>WHERE DO YOU WANT TO GO TO</that>
        <template>
            <think><set name='destination'><star /></set></think>
            You want to go to from <get name='currentloc' /> to <get name='destination' />
        </template>
    </category>

    <!-- <category>
     <pattern>WHAT TRAINS ARE LEAVING AT <regex pattern="\d(:\d\d)?$"/></pattern>
        <template>
            trains leaving at time: <set name="destination"><star index="1"/></set>.
        </template>
    </category> -->
</aiml>
